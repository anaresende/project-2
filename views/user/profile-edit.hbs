
<section class="section">
    <div class="container">    
        <h1>Get your popcorns ready, it's movie time!</h1>

        <form action="/user/profile/edit" method="POST" enctype="multipart/form-data">
            <div class="container">
                <div class="columns mt-6 is-justify-content-center">
                    <div class= "column is-4">
                        <div class="field mt-4">
                            <input class="input" type="text" name="name" value="{{user.name}}" name="name" minlength="3" maxlength="50" required>
                        </div>
                        <div class="field mt-4">
                            <input class="input" type="text" name="username" value="{{user.username}}" minlength="3" maxlength="10" required>
                        </div>
                        <div class="field mt-4">
                            <div class="control has-icons-left has-icons-right">
                                <input class="input" type="email" name="email" value="{{user.email}}" id="email" required>
                                <span class="icon is-small is-left">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <span class="icon is-small is-right">
                                    <i class="fas fa-check"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field mt-4">
                            <div class="control has-icons-left">
                                <input class="input" type="password" name="password" id="password">
                                <span class="icon is-small is-left">
                                    <i class="fas fa-lock"></i>
                                </span>
                            </div>
                        </div>
                        <div class="field mt-4">
                            <input class="input" type="text" name="favoriteMovie"  placeholder="What's your favorite movie?" value="{{user.favoriteMovie}}" id="favoriteMovie" required>
                        </div>
                        <div class="field mt-4">
                            <img src="{{user.avatarUrl}}" width="100px"/>
                            <input class="mt-4" type="file" name="avatarUrl" id="avatarUrl">
                        </div>
                        <div class="field mt-4 is-justify-content-center">
                    <button class="button is-primary" type="submit">Submit</button>
                        </div> 
                        </div>
                    </div> 
                </div>
                
            </div>       
        </form>

        {{#if errorMessage}}
            <p>{{errorMessage}}</p>
        {{/if}}
    </div>
</section>